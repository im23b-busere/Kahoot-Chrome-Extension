{
  "name": "kahoot-chrome-extension",
  "version": "1.0.0",
  "description": "chrome extension for kahoot",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_title": "Kahoot Extension"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.kahoot.it/*"],
      "js": ["scripts/content.js"]
    }
  ],
  "host_permissions": [
    "*://kahoot.it/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}